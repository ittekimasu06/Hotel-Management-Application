<Page x:Class="QuanLyKhachSan.Pages.Booking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyKhachSan.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Booking">

    <Border CornerRadius="5" Background="{DynamicResource SecondaryBackgroundColor}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Quản lý đặt phòng" 
               Style="{DynamicResource LabelStyle}" 
               HorizontalAlignment="Left" VerticalAlignment="Center" 
               Margin="40 0 0 0" Padding="10 5 0 5"
               BorderBrush="{DynamicResource PrimaryBlueColor}" BorderThickness="4 0 0 0"/>

            <!-- Form nhập thông tin đặt phòng -->
            <StackPanel Grid.Row="1" Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Mã đặt phòng:" Width="120"/>
                    <TextBox x:Name="BookingIdTextBox" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Ngày nhận:" Width="120"/>
                    <DatePicker x:Name="CheckInDatePicker" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Ngày trả:" Width="120"/>
                    <DatePicker x:Name="CheckOutDatePicker" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Loại phòng:" Width="120"/>
                    <ComboBox x:Name="RoomTypeComboBox" Width="200">
                        <ComboBoxItem Content="Phòng đơn"/>
                        <ComboBoxItem Content="Phòng đôi"/>
                        <ComboBoxItem Content="Phòng gia đình"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Số khách:" Width="120"/>
                    <TextBox x:Name="GuestCountTextBox" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Yêu cầu đặc biệt:" Width="120"/>
                    <TextBox x:Name="SpecialRequestTextBox" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Thêm mới" Width="100" Margin="0,0,10,0" Click="AddBooking_Click"/>
                    <Button Content="Cập nhật" Width="100" Margin="0,0,10,0" Click="UpdateBooking_Click"/>
                    <Button Content="Xóa" Width="100" Click="DeleteBooking_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Danh sách đặt phòng và tình trạng phòng -->
            <DataGrid Grid.Row="2" x:Name="BookingDataGrid" AutoGenerateColumns="False" Margin="10" SelectionChanged="BookingDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã đặt phòng" Binding="{Binding BookingId}" Width="*"/>
                    <DataGridTextColumn Header="Ngày nhận" Binding="{Binding CheckInDate}" Width="*"/>
                    <DataGridTextColumn Header="Ngày trả" Binding="{Binding CheckOutDate}" Width="*"/>
                    <DataGridTextColumn Header="Loại phòng" Binding="{Binding RoomType}" Width="*"/>
                    <DataGridTextColumn Header="Số khách" Binding="{Binding GuestCount}" Width="*"/>
                    <DataGridTextColumn Header="Yêu cầu đặc biệt" Binding="{Binding SpecialRequest}" Width="*"/>
                    <DataGridTextColumn Header="Tình trạng phòng" Binding="{Binding RoomStatus}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Page>
